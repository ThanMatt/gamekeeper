---
import { cn } from "@/lib/utils";

interface Props {
  icon: string;
  title: string;
  className?: string;
}

const { icon, title, className } = Astro.props;
---

<div class="text-center">
  <div
    class={cn(
      "bg-primary mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-full",
      className
    )}>
    <span class="text-2xl">{icon}</span>
  </div>
  <h4 class="mb-2 font-semibold">{title}</h4>
  <p class="text-muted-foreground text-sm">
    <slot />
  </p>
</div>
