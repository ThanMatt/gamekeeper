---
import { Gamepad2Icon } from "@lucide/astro";

import type { BoardGamePluginManifest } from "@/types";

type BoardGamePluginCardProps = {
  plugin: BoardGamePluginManifest;
  boardGameSlug: string;
};

const { plugin, boardGameSlug } = Astro.props as BoardGamePluginCardProps;
---

<a href={`/games/${boardGameSlug}/${plugin.slug}`} class="group block">
  <div
    class="bg-card text-card-foreground hover:bg-accent/5 overflow-hidden rounded-lg border shadow-sm transition-colors">
    <!-- Card Content -->
    <div class="p-4">
      <!-- Header -->
      <div class="mb-2 flex items-start justify-between">
        <div class="flex gap-2">
          <Gamepad2Icon class="h-5 w-5" />
          <div class="flex-1">
            <h3 class="mb-1 text-lg leading-none font-semibold tracking-tight">
              {plugin.name}
            </h3>
          </div>
        </div>
      </div>

      <!-- Description -->
      <p class="text-muted-foreground mb-3 text-sm leading-relaxed">
        {plugin.description}
      </p>
    </div>
  </div>
</a>
